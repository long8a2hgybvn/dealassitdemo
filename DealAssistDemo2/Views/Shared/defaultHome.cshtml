<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>defaultHome</title>
    @Styles.Render(@ViewBag.style)
    @Styles.Render("~/Styles/Default.css")
</head>
<body>
    <div class="heading">
        <div class="headercontent">
            <div class="headerlogo">
                <a style="height:10vh" href='@Url.Action("Index", "Homepage")'><img class="logopicture" src="~/Assets/Picture/LogoOnWeb.png" border="0"></a>
            </div>
            <div class="searchbar">
                <div class="containbox">
                    <div class="thebox">
                        @using DealAssistDemo2.Models
                        @model search
                        @using (Html.BeginForm("search", "HomePage", FormMethod.Post))
                        {
                            @Html.TextBoxFor(model => model.inputstring)
                        }
                    </div>
                    <div class="search">
                        <input type="submit" onclick="parent.location='@Url.Action("search", "HomePage")'"/>
                    </div>
                </div>
            </div>
            <div class="bookmarks">
                <a style="height:5vh" href="https://lazada.vn"><img class="bookmarkslogo" src="~/Assets/Picture/Bookmark.png" border="0"></a>
            </div>
            <div class="interest">
                <a style="height:5vh" href='@Url.Action("Favorite", "Homepage")'><img class="interestlogo" src="~/Assets/Picture/interest.png" border="0"></a>
            </div>
            <div class="uac">
                <a style="height:7vh" href="https://lazada.vn"><img class="uaclogo" src="~/Assets/Picture/uac.png" border="0"></a>
            </div>
        </div>
    </div>
    <br style="line-height:3px" />
    @RenderBody()
    <footer class="footer">
        <div>
            <text class="footertext">
                Copyright Boys Without Smartphone 2018<br />
                All rights reserved<br />
            </text>
        </div>
    </footer>
</body>
</html>
