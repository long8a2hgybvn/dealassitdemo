@using DealAssistDemo2.Models
@{
    ViewBag.Title = "CatalogueView";
    Layout = "~/Views/Shared/defaultHome.cshtml";
}
<div class="navbar">
    @Html.ActionLink("Trang Chủ", "Index")
    <img src="~/Assets/Picture/Bookmark.png" style="height:3.3vh; margin-left:1.2vw;margin-right:1.2vw" />
    @{
        string pcata = ViewBag.PreCata;
        string pcatatext = ViewBag.PreCataText;
        if (pcata == null || pcatatext == null)
        {
            @Html.ActionLink("Đồ công nghệ và phụ kiện", "techstuff");
            ViewBag.PreCata = "techstuff";
            ViewBag.PreCataText = "Đồ công nghệ và phụ kiện";
        }
        else
        {
            @Html.ActionLink(pcatatext, pcata);
        }
    }
</div>
<div style="text-align:center">
    <div class="boxes">
        @{
            List<string> list = new List<string>();
            List<string> listimg = new List<string>();
            string getcatalogue = ViewBag.PreCata;
            switch (getcatalogue)
            {
                case "tech":
                    list = new CatalogueView().tech;
                    listimg = new CatalogueView().techstuffimg;
                    break;
                case "household":
                    list = new CatalogueView().household;
                    listimg = new CatalogueView().householdimg;
                    break;
                case "fashion":
                    list = new CatalogueView().fashion;
                    listimg = new CatalogueView().fashionimg;
                    break;
                case "healthcare":
                    list = new CatalogueView().healthcare;
                    listimg = new CatalogueView().healthcareimg;
                    break;
                case "grocery":
                    list = new CatalogueView().grocery;
                    listimg = new CatalogueView().groceryimg;
                    break;
                case "cataTrans":
                    list = new CatalogueView().trans;
                    listimg = new CatalogueView().transportimg;
                    break;
            }
            for (int i = 0; i < list.Count; i++)
            {
                if (i == 6)
                {
                    <br />
                    <div class="datacontainer">
                        <a href="@Url.Action("ProductPage","HomePage")">
                            <img class="imgca" src="~/@listimg[i]" /><br />
                            <text class="titleca">@list[i]</text>
                        </a>
                    </div>
                }
                else
                {
                    <div class="datacontainer">
                        <a href="">
                            <img class="imgca" src="~/@listimg[i]" /><br />
                            <text class="titleca">@list[i]</text>
                        </a>
                    </div>
                }
            }
        }
    </div>
</div>

